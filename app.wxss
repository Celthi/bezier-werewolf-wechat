/**app.wxss**/

.container {
    min-height: 100vh;
    background: #090408 no-repeat;
    background-size: 100% auto;
}
@import 'style/background.wxss';

.header {
	text-align: center;
	padding: 30px 0;
	color: white;
	background: none;
	font-size: 24pt;
	text-shadow: rgb(59, 59, 25) 1px 0 18px;
	letter-spacing: 0.3em;
	margin: 0 0 50px 0;
}

.header image {
	width: 300px;
	height: 110px;
}

.footer {
	color: #ccc;
	font-size: 9pt;
	text-align: right;
	padding: 5vh 3vh;
}

.footer text {
	display: block;
}

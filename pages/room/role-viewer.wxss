
view.role-viewer {
	margin: 40px 0 20px 0;
	text-align: center;
}

view.role-viewer text.header {
	color: white;
	display: block;
	margin: 20px;
}

.box {
	font-size: 12pt;
}

.box .header {
	font-size: 15pt;
}

view.role-viewer input,
view.role-viewer button {
	background: white;
	width: 6em;
	border-radius: 6px;
	display: block;
	margin: 15px auto;
	text-align: center;
	box-sizing: content-box;
	padding: 0.5em 0.8em;
	line-height: 2em;
	height: 2em;
	font-size: 12pt;
}

view.role-viewer.loaded text.identity {
	color: white;
	text-align: center;
	display: block;
	font-size: 12pt;
	margin: 22px 0;
}

view.role-viewer image.role {
	width: 200px;
	height: 200px;
	display: block;
	margin: 0;
}

.card-bg {
	width: 160px;
	height: 200px;
	overflow: hidden;
	margin: auto;
	background-size: 180px 200px;
	background-position: -10px 0;
	position: relative;
}

.card-bg image.role {
	text-align: center;
	position: absolute;
	top: 0;
	left: -20px;
}

@import '/style/card-bg.wxss';
